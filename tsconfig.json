{
	"compilerOptions": {
		// Node 18
		"target": "ES2022",
		"module": "esnext",
		"types": ["node"],
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"paths": {
			"@goio/*": ["./src/"]
		}
	},
	"include": [
		"src"
	]
}
